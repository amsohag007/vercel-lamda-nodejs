{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types"],
    "removeComments": false
  },
  "include": ["api/**/*", "api/income-paths", "auth"],
  "exclude": ["node_modules"]
}
